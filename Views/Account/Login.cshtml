@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Log in</h2>

<div class="text-danger" asp-validation-summary="ModelOnly"> </div>

        <form asp-action="Login" asp-controller="Account" method="post">

            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control"/>
                <div> <span asp-validation-for="Email" class="text-danger"></span></div>
            </div>

             <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control"/>
                <div> <span asp-validation-for="Password" class="text-danger"></span></div>
            </div>

            <div class="mb-2">
                <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                class="form-check-inline"/>  <label asp-for="RememberMe" class="form-label"></label>
            </div>

            <button class="btn btn-primary" type="submit"> Log in</button>
             <a asp-action="Create" asp-asp-controller="Account" class="btn btn-secondary">Create Account</a>

        </form>

