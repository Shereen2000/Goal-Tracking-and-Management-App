@model Goal

<h2 class="page-title">Edit Goal</h2>

<form asp-action="Edit">
    <!-- Include GoalId as a hidden field to identify the goal -->
    <input type="hidden" asp-for="GoalId" />

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Motivation" class="form-label"></label>
        <input asp-for="Motivation" class="form-control" />
        <span asp-validation-for="Motivation" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Update Goal</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Styles {
    <style>
        .page-title {
            font-family: Arial, sans-serif;
            font-size: 1.5rem; /* Consistent with card title size */
            font-weight: bold; /* Make the title bold */
            margin-bottom: 1.5rem; /* Space below the title */
        }

        .form-label {
            font-family: Arial, sans-serif;
            font-size: 1rem; /* Match card text size */
            font-weight: bold; /* Label text should stand out */
        }

        .form-control {
            font-family: Arial, sans-serif;
            font-size: 1rem; /* Match card text size */
            padding: 0.75rem 1.25rem; /* Match padding with card fields */
        }

        .btn-primary, .btn-secondary {
            font-family: Arial, sans-serif;
            font-size: 1rem; /* Match button text size */
            padding: 0.75rem 1.25rem; /* Match button padding */
        }

        .btn-secondary {
            margin-left: 0.5rem; /* Space between buttons */
        }
    </style>
}
