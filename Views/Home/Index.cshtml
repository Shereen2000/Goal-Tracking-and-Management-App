@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-3 fw-bold">Achieve Your Goals with Ease</h1>
    <p class="lead mb-4">Track, manage, and accomplish your personal and professional goals effortlessly.</p>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 d-flex align-items-stretch">
                <div class="hero-section bg-primary text-white p-5 rounded d-flex flex-column">
                    <div class="flex-grow-1">
                        <h2 class="display-4">Set Your Goals</h2>
                        <p class="lead">Create and organize your goals with a user-friendly interface.</p>
                    </div>
                    <a asp-controller="Goal" asp-action="Add" class="btn btn-light btn-lg mt-3 mb-3 align-self-start">Get Started</a>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-stretch">
                <div class="hero-section bg-success text-white p-5 rounded d-flex flex-column">
                    <div class="flex-grow-1">
                        <h2 class="display-4">Track Your Progress</h2>
                        <p class="lead">Monitor your progress and stay motivated with our tracking board.</p>
                    </div>
                    <a asp-controller="Goal" asp-action="GoalTrackingBoard" class="btn btn-light btn-lg mt-3 mb-3 align-self-start">Track Now</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h2 class="display-5">Why Choose Us?</h2>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="feature text-center">
                        <i class="fas fa-tachometer-alt fa-3x mb-3"></i>
                        <h4>Intuitive Dashboard</h4>
                        <p>Easy-to-use interface for quick goal management and tracking.</p>
                    </div>
                </div>
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="feature text-center">
                        <i class="fas fa-calendar-check fa-3x mb-3"></i>
                        <h4>Goal Achievement</h4>
                        <p>Set milestones and celebrate achievements as you reach your goals.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(to right, #007bff, #00c851);
        color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Ensure space between content and button */
        text-align: center; /* Center text horizontally */
    }

    .feature {
        display: flex;
        flex-direction: column;
        align-items: center; /* Center items horizontally */
        text-align: center; /* Center text horizontally */
    }

        .feature i {
            color: #007bff;
        }
</style>
